<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/green</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="FilledButton" parent="Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
    </style>
    
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
    
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/green</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/split_quick_icon</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.SplitQuick</item>
    </style>

</resources>